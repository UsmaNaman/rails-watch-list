<div class='container'>
  <h1><%= @list.name  %></h1>
  <br>
  <% if @list.photo.attached? %>
    <%= cl_image_tag @list.photo.key, height: 150, width: 200, crop: :fill %>
  <% end %>
  <br>
  <% @list.bookmarks.each do |bookmark| %>
    <img src="<%= bookmark.movie.poster_url %>" class="img-fluid" alt="Responsive image">
    <p><%= bookmark.movie.title %></p>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating %></p>
    <p><%= bookmark.comment %></p>
    <%= link_to "ðŸ—‘",
      bookmark_path(bookmark),
      data: {turbo_method: :delete,turbo_confirm: "Are you sure?"}
    %>
  <% end %>
  <br>
  <%= link_to "Add Movie", new_list_bookmark_path(@list) %>
  <%= link_to "Back to Home Page", lists_path %>
</div>
